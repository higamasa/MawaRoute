<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.owner_pc.androidkanazawa2015">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Google API の認証キー-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCY7L-sCQ4fkFPJdM1p9ELyG125FUz45ng" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RangeCategorySettings"
            android:label="@string/app_name" >
        </activity>
    </application>
    <!-- GoogleMap_APIに必要なパーミッション群-->
    <permission
        android:name="jp.smartdt.movemap.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" >
    </permission>
    <!-- インターネット接続を許可 -->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- GPSの利用権限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <!-- 位置情報の取得 (Wi-Fi経由) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <!-- Google API へのアクセス -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"></uses-permission>
    <!-- 外部SDカードへの書き込み -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <!-- OpenGLS2.0 -->
    <user-feature android:glEsVersion="0x00020000"
        android:required="true"/>
</manifest>
